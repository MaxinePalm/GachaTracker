@{
    ViewData["Title"] = "Gacha Character Tracker";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lucide/0.263.1/umd/lucide.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gradient-to-br from-purple-900 via-indigo-900 to-blue-900 text-white">
    <div class="max-w-7xl mx-auto p-8">
        <div class="text-center mb-16">
            <h1 class="text-7xl font-bold mb-6 bg-gradient-to-r from-pink-400 via-purple-400 to-indigo-400 bg-clip-text text-transparent">
                Gacha Character Tracker
            </h1>
            <p class="text-2xl text-purple-200">Choose your game to start tracking</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <!-- Genshin Impact -->
            <a href="/Genshin/Index" class="group">
                <div class="bg-gradient-to-br from-amber-500/20 to-orange-600/20 backdrop-blur-lg rounded-2xl p-8 border-2 border-amber-400/30 hover:border-amber-400 transition-all hover:shadow-2xl hover:shadow-amber-500/50 transform hover:scale-105 cursor-pointer">
                    <div class="text-center">
                        <div class="w-24 h-24 mx-auto mb-6 bg-gradient-to-br from-amber-400 to-orange-500 rounded-full flex items-center justify-center">
                            <i data-lucide="star" class="w-12 h-12 text-white"></i>
                        </div>
                        <h2 class="text-3xl font-bold mb-3 text-amber-300">Genshin Impact</h2>
                        <p class="text-purple-200">Track your Travelers</p>
                        <div class="mt-6 flex justify-center gap-2">
                            <span class="px-3 py-1 bg-amber-500/30 rounded-full text-sm">4★</span>
                            <span class="px-3 py-1 bg-amber-500/30 rounded-full text-sm">5★</span>
                        </div>
                    </div>
                </div>
            </a>

            <!-- Honkai Star Rail -->
            <a href="/StarRail/Index" class="group">
                <div class="bg-gradient-to-br from-yellow-500/20 to-purple-600/20 backdrop-blur-lg rounded-2xl p-8 border-2 border-purple-400/30 hover:border-purple-400 transition-all hover:shadow-2xl hover:shadow-purple-500/50 transform hover:scale-105 cursor-pointer">
                    <div class="text-center">
                        <div class="w-24 h-24 mx-auto mb-6 bg-gradient-to-br from-yellow-400 to-purple-500 rounded-full flex items-center justify-center">
                            <i data-lucide="rocket" class="w-12 h-12 text-white"></i>
                        </div>
                        <h2 class="text-3xl font-bold mb-3 text-purple-300">Honkai: Star Rail</h2>
                        <p class="text-purple-200">Track your Trailblazers</p>
                        <div class="mt-6 flex justify-center gap-2">
                            <span class="px-3 py-1 bg-purple-500/30 rounded-full text-sm">4★</span>
                            <span class="px-3 py-1 bg-purple-500/30 rounded-full text-sm">5★</span>
                        </div>
                    </div>
                </div>
            </a>

            <!-- Zenless Zone Zero -->
            <a href="/ZZZ/Index" class="group">
                <div class="bg-gradient-to-br from-cyan-500/20 to-blue-600/20 backdrop-blur-lg rounded-2xl p-8 border-2 border-cyan-400/30 hover:border-cyan-400 transition-all hover:shadow-2xl hover:shadow-cyan-500/50 transform hover:scale-105 cursor-pointer">
                    <div class="text-center">
                        <div class="w-24 h-24 mx-auto mb-6 bg-gradient-to-br from-cyan-400 to-blue-500 rounded-full flex items-center justify-center">
                            <i data-lucide="zap" class="w-12 h-12 text-white"></i>
                        </div>
                        <h2 class="text-3xl font-bold mb-3 text-cyan-300">Zenless Zone Zero</h2>
                        <p class="text-purple-200">Track your Agents</p>
                        <div class="mt-6 flex justify-center gap-2">
                            <span class="px-3 py-1 bg-cyan-500/30 rounded-full text-sm">A Rank</span>
                            <span class="px-3 py-1 bg-cyan-500/30 rounded-full text-sm">S Rank</span>
                        </div>
                    </div>
                </div>
            </a>

            <!-- Wuthering Waves -->
            <a href="/Wuthering/Index" class="group">
                <div class="bg-gradient-to-br from-emerald-500/20 to-teal-600/20 backdrop-blur-lg rounded-2xl p-8 border-2 border-emerald-400/30 hover:border-emerald-400 transition-all hover:shadow-2xl hover:shadow-emerald-500/50 transform hover:scale-105 cursor-pointer">
                    <div class="text-center">
                        <div class="w-24 h-24 mx-auto mb-6 bg-gradient-to-br from-emerald-400 to-teal-500 rounded-full flex items-center justify-center">
                            <i data-lucide="waves" class="w-12 h-12 text-white"></i>
                        </div>
                        <h2 class="text-3xl font-bold mb-3 text-emerald-300">Wuthering Waves</h2>
                        <p class="text-purple-200">Track your Resonators</p>
                        <div class="mt-6 flex justify-center gap-2">
                            <span class="px-3 py-1 bg-emerald-500/30 rounded-full text-sm">4★</span>
                            <span class="px-3 py-1 bg-emerald-500/30 rounded-full text-sm">5★</span>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="mt-16 text-center">
            <p class="text-purple-300 text-lg">All your gacha progress in one place</p>
        </div>
    </div>

    <script>
        lucide.createIcons();
    </script>
</body>
</html>