@model IEnumerable<GachaTracker.Models.StarRailCharacter>

@{
    ViewData["Title"] = "Honkai: Star Rail Tracker";
    Layout = null;
    var characterList = Model?.ToList() ?? new List<GachaTracker.Models.StarRailCharacter>();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lucide/0.263.1/umd/lucide.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .modal {
            display: none;
        }

            .modal.active {
                display: flex;
            }
    </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-purple-900 via-indigo-900 to-blue-900 text-white">

    <div class="max-w-7xl mx-auto p-8">
        <div class="flex items-center justify-between mb-8">
            <a href="/" class="flex items-center gap-2 text-purple-200 hover:text-purple-100 transition-all">
                <i data-lucide="home" class="w-5 h-5"></i>
                <span>All Games</span>
            </a>
            <div class="flex gap-2">
                <a href="/Genshin/Index" class="px-4 py-2 bg-white/10 hover:bg-white/20 border-2 border-white/20 rounded-lg transition-all">Genshin</a>
                <a href="/StarRail/Index" class="px-4 py-2 bg-purple-500/30 border-2 border-purple-400 rounded-lg font-semibold">Star Rail</a>
                <a href="/ZZZ/Index" class="px-4 py-2 bg-white/10 hover:bg-white/20 border-2 border-white/20 rounded-lg transition-all">ZZZ</a>
                <a href="/Wuthering/Index" class="px-4 py-2 bg-white/10 hover:bg-white/20 border-2 border-white/20 rounded-lg transition-all">Wuthering</a>
            </div>
        </div>

        <div class="text-center mb-12">
            <h1 class="text-6xl font-bold mb-4 bg-gradient-to-r from-yellow-300 via-purple-300 to-pink-300 bg-clip-text text-transparent">
                Honkai: Star Rail Characters
            </h1>
            <p class="text-xl text-purple-200">Track your Trailblazers</p>
        </div>

        <div class="flex justify-between items-center mb-8 gap-4 flex-wrap">
            <div class="flex gap-2 flex-wrap">
                <button onclick="filterPath('all')" class="filter-btn px-4 py-2 rounded-lg transition-all bg-purple-600 shadow-lg" data-path="all">All</button>
                <button onclick="filterPath('Destruction')" class="filter-btn px-4 py-2 rounded-lg bg-red-500/20 hover:bg-red-500/40 border border-red-400/50" data-path="Destruction">Destruction</button>
                <button onclick="filterPath('Hunt')" class="filter-btn px-4 py-2 rounded-lg bg-green-500/20 hover:bg-green-500/40 border border-green-400/50" data-path="Hunt">Hunt</button>
                <button onclick="filterPath('Erudition')" class="filter-btn px-4 py-2 rounded-lg bg-purple-500/20 hover:bg-purple-500/40 border border-purple-400/50" data-path="Erudition">Erudition</button>
                <button onclick="filterPath('Harmony')" class="filter-btn px-4 py-2 rounded-lg bg-pink-500/20 hover:bg-pink-500/40 border border-pink-400/50" data-path="Harmony">Harmony</button>
                <button onclick="filterPath('Nihility')" class="filter-btn px-4 py-2 rounded-lg bg-indigo-500/20 hover:bg-indigo-500/40 border border-indigo-400/50" data-path="Nihility">Nihility</button>
                <button onclick="filterPath('Preservation')" class="filter-btn px-4 py-2 rounded-lg bg-blue-500/20 hover:bg-blue-500/40 border border-blue-400/50" data-path="Preservation">Preservation</button>
                <button onclick="filterPath('Abundance')" class="filter-btn px-4 py-2 rounded-lg bg-emerald-500/20 hover:bg-emerald-500/40 border border-emerald-400/50" data-path="Abundance">Abundance</button>
            </div>
            <button onclick="openModal()" class="flex items-center gap-2 bg-gradient-to-r from-pink-500 to-purple-600 px-6 py-3 rounded-lg hover:shadow-xl hover:shadow-purple-500/50 transition-all transform hover:scale-105">
                <i data-lucide="plus" class="w-5 h-5"></i>
                Add Character
            </button>
        </div>

        <div id="characterGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"></div>
        <div id="emptyState" class="text-center py-20 hidden">
            <p class="text-2xl text-purple-300">No characters yet. Add your first Trailblazer!</p>
        </div>
    </div>

    <div id="characterModal" class="modal fixed inset-0 bg-black/70 backdrop-blur-sm items-center justify-center z-50 p-4">
        <div class="bg-gradient-to-br from-indigo-900 to-purple-900 rounded-2xl p-8 max-w-2xl w-full max-h-[90vh] overflow-y-auto border-2 border-purple-400/30 shadow-2xl">
            <div class="flex justify-between items-center mb-6">
                <h2 id="modalTitle" class="text-3xl font-bold">Add New Character</h2>
                <button onclick="closeModal()" class="p-2 hover:bg-white/10 rounded-lg transition-all">
                    <i data-lucide="x" class="w-6 h-6"></i>
                </button>
            </div>

            <form id="characterForm" method="post" class="space-y-4">
                @Html.AntiForgeryToken()
                <input type="hidden" id="characterId" name="Id" value="0">

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm text-purple-200 mb-2">Character Name</label>
                        <input type="text" id="name" name="Name" required class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-purple-400 transition-all text-white">
                    </div>
                    <div>
                        <label class="block text-sm text-purple-200 mb-2">Element</label>
                        <select id="element" name="Element" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-purple-400 transition-all text-white">
                            <option>Physical</option>
                            <option>Fire</option>
                            <option>Ice</option>
                            <option>Lightning</option>
                            <option>Wind</option>
                            <option>Quantum</option>
                            <option>Imaginary</option>
                        </select>
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm text-purple-200 mb-2">Path</label>
                        <select id="path" name="Path" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-purple-400 transition-all text-white">
                            <option>Destruction</option>
                            <option>Hunt</option>
                            <option>Erudition</option>
                            <option>Harmony</option>
                            <option>Nihility</option>
                            <option>Preservation</option>
                            <option>Abundance</option>
                            <option>Remembrance</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm text-purple-200 mb-2">Rarity</label>
                        <select id="rarity" name="Rarity" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-purple-400 transition-all text-white">
                            <option value="4">4★</option>
                            <option value="5" selected>5★</option>
                        </select>
                    </div>
                </div>

                <div>
                    <label class="block text-sm text-purple-200 mb-2">Character Level (Max 80)</label>
                    <input type="number" id="currentLevel" name="CurrentLevel" value="1" min="1" max="80" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-purple-400 transition-all text-white">
                </div>

                <div class="border-t border-white/20 pt-4">
                    <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
                        <i data-lucide="sword" class="w-5 h-5"></i> Light Cone
                    </h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm text-purple-200 mb-2">Light Cone Name</label>
                            <input type="text" id="lightconeName" name="LightconeName" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-purple-400 transition-all text-white">
                        </div>
                        <div>
                            <label class="block text-sm text-purple-200 mb-2">Level (Max 80)</label>
                            <input type="number" id="lightconeLevel" name="LightconeLevel" value="1" min="1" max="80" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-purple-400 transition-all text-white">
                        </div>
                    </div>
                </div>

                <div class="border-t border-white/20 pt-4">
                    <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
                        <i data-lucide="zap" class="w-5 h-5"></i> Talents
                    </h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm text-purple-200 mb-2">Basic Attack (Max 6)</label>
                            <input type="number" id="talentBasicAttack" name="TalentBasicAttack" value="1" min="1" max="6" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-purple-400 transition-all text-white">
                        </div>
                        <div>
                            <label class="block text-sm text-purple-200 mb-2">Skill (Max 10)</label>
                            <input type="number" id="talentSkill" name="TalentSkill" value="1" min="1" max="10" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-purple-400 transition-all text-white">
                        </div>
                        <div>
                            <label class="block text-sm text-purple-200 mb-2">Ultimate (Max 10)</label>
                            <input type="number" id="talentUltimate" name="TalentUltimate" value="1" min="1" max="10" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-purple-400 transition-all text-white">
                        </div>
                        <div>
                            <label class="block text-sm text-purple-200 mb-2">Talent (Max 10)</label>
                            <input type="number" id="talentTalent" name="TalentTalent" value="1" min="1" max="10" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-purple-400 transition-all text-white">
                        </div>
                    </div>
                </div>

                <div class="border-t border-white/20 pt-4">
                    <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
                        <i data-lucide="shield" class="w-5 h-5"></i> Relics
                    </h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm text-purple-200 mb-2">Relic Set</label>
                            <input type="text" id="relicSet" name="RelicSet" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-purple-400 transition-all text-white">
                        </div>
                        <div>
                            <label class="block text-sm text-purple-200 mb-2">Pieces (0-6)</label>
                            <input type="number" id="relicPieces" name="RelicPieces" value="0" min="0" max="6" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-purple-400 transition-all text-white">
                        </div>
                    </div>
                </div>

                <div class="flex gap-4 pt-6">
                    <button type="submit" class="flex-1 bg-gradient-to-r from-green-500 to-emerald-600 py-3 rounded-lg hover:shadow-xl hover:shadow-green-500/50 transition-all transform hover:scale-105 flex items-center justify-center gap-2 font-semibold">
                        <i data-lucide="save" class="w-5 h-5"></i>
                        <span id="saveButtonText">Save Character</span>
                    </button>
                    <button type="button" onclick="closeModal()" class="flex-1 bg-white/10 py-3 rounded-lg hover:bg-white/20 transition-all">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <form id="deleteForm" method="post" style="display: none;">
        @Html.AntiForgeryToken()
    </form>

    <script>
        let characters = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(characterList, new System.Text.Json.JsonSerializerOptions { PropertyNamingPolicy = System.Text.Json.JsonNamingPolicy.CamelCase }));
        let currentFilter = 'all';
        let editingId = 0;

        document.addEventListener('DOMContentLoaded', function() {
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
            renderCharacters();
        });

        function renderCharacters() {
            const grid = document.getElementById('characterGrid');
            const emptyState = document.getElementById('emptyState');
            const filtered = currentFilter === 'all' ? characters : characters.filter(c => c.path === currentFilter);

            if (filtered.length === 0) {
                grid.innerHTML = '';
                emptyState.classList.remove('hidden');
                return;
            }

            emptyState.classList.add('hidden');
            grid.innerHTML = filtered.map(char => `
                <div class="bg-gradient-to-br from-white/10 to-white/5 backdrop-blur-lg rounded-xl p-6 border border-white/20 hover:border-purple-400/50 transition-all hover:shadow-2xl hover:shadow-purple-500/30 transform hover:-translate-y-1">
                    <div class="flex justify-between items-start mb-4">
                        <div>
                            <h3 class="text-2xl font-bold mb-1">${char.name}</h3>
                            <div class="flex items-center gap-2 text-sm text-purple-200">
                                <span>${char.element}</span><span>•</span><span>${char.path || ''}</span>
                            </div>
                        </div>
                        <div class="flex gap-2">
                            <button onclick="editCharacter(${char.id})" class="p-2 bg-blue-500/20 hover:bg-blue-500/40 rounded-lg transition-all">
                                <i data-lucide="edit-2" class="w-4 h-4"></i>
                            </button>
                            <button onclick="deleteCharacter(${char.id})" class="p-2 bg-red-500/20 hover:bg-red-500/40 rounded-lg transition-all">
                                <i data-lucide="trash-2" class="w-4 h-4"></i>
                            </button>
                        </div>
                    </div>
                    <div class="flex gap-1 mb-4">
                        ${Array(char.rarity).fill('<i data-lucide="star" class="w-4 h-4 fill-yellow-400 text-yellow-400"></i>').join('')}
                    </div>
                    <div class="mb-3">
                        <div class="flex justify-between text-sm mb-1">
                            <span class="text-purple-200">Level</span>
                            <span class="font-semibold">${char.currentLevel}/80</span>
                        </div>
                        <div class="h-2 bg-black/30 rounded-full overflow-hidden">
                            <div class="${getProgressColor(char.currentLevel, 80)} h-full" style="width: ${(char.currentLevel / 80) * 100}%"></div>
                        </div>
                    </div>
                    ${char.lightconeName ? `
                    <div class="mb-3">
                        <div class="flex items-center gap-2 text-sm mb-1">
                            <i data-lucide="sparkles" class="w-3.5 h-3.5"></i>
                            <span class="text-purple-200">${char.lightconeName}</span>
                        </div>
                        <div class="flex justify-between text-xs mb-1">
                            <span class="text-purple-300">Lv ${char.lightconeLevel}/80</span>
                        </div>
                        <div class="h-2 bg-black/30 rounded-full overflow-hidden">
                            <div class="${getProgressColor(char.lightconeLevel, 80)} h-full" style="width: ${(char.lightconeLevel / 80) * 100}%"></div>
                        </div>
                    </div>` : ''}
                    <div class="grid grid-cols-4 gap-2 mb-3">
                        <div class="bg-black/20 rounded p-2 text-center">
                            <div class="text-xs text-purple-200">Basic</div>
                            <div class="font-bold">${char.talentBasicAttack}/6</div>
                        </div>
                        <div class="bg-black/20 rounded p-2 text-center">
                            <div class="text-xs text-purple-200">Skill</div>
                            <div class="font-bold">${char.talentSkill}/10</div>
                        </div>
                        <div class="bg-black/20 rounded p-2 text-center">
                            <div class="text-xs text-purple-200">Ult</div>
                            <div class="font-bold">${char.talentUltimate}/10</div>
                        </div>
                        <div class="bg-black/20 rounded p-2 text-center">
                            <div class="text-xs text-purple-200">Talent</div>
                            <div class="font-bold">${char.talentTalent}/10</div>
                        </div>
                    </div>
                    ${char.relicSet ? `
                    <div class="flex items-center justify-between text-sm bg-black/20 rounded p-2">
                        <div class="flex items-center gap-2">
                            <i data-lucide="shield" class="w-3.5 h-3.5 text-green-400"></i>
                            <span class="text-purple-200">${char.relicSet}</span>
                        </div>
                        <span class="font-bold">${char.relicPieces}/6</span>
                    </div>` : ''}
                </div>
            `).join('');

            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        }

        function getProgressColor(current, max) {
            const percent = (current / max) * 100;
            if (percent === 100) return 'bg-gradient-to-r from-green-500 to-emerald-500';
            if (percent >= 75) return 'bg-gradient-to-r from-blue-500 to-cyan-500';
            if (percent >= 50) return 'bg-gradient-to-r from-yellow-500 to-orange-500';
            return 'bg-gradient-to-r from-red-500 to-pink-500';
        }

        function filterPath(path) {
            currentFilter = path;
            document.querySelectorAll('.filter-btn').forEach(btn => {
                if (btn.dataset.path === path) {
                    btn.classList.add('bg-purple-600', 'shadow-lg');
                } else {
                    btn.classList.remove('bg-purple-600', 'shadow-lg');
                }
            });
            renderCharacters();
        }

        function openModal() {
            editingId = 0;
            document.getElementById('modalTitle').textContent = 'Add New Character';
            document.getElementById('saveButtonText').textContent = 'Save Character';
            document.getElementById('characterForm').reset();
            document.getElementById('characterForm').action = '/StarRail/Create';
            document.getElementById('characterModal').classList.add('active');

            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        }

        function closeModal() {
            document.getElementById('characterModal').classList.remove('active');
        }

        function editCharacter(id) {
            const char = characters.find(c => c.id === id);
            if (!char) return;

            editingId = id;
            document.getElementById('modalTitle').textContent = 'Edit Character';
            document.getElementById('saveButtonText').textContent = 'Update Character';
            document.getElementById('characterForm').action = `/StarRail/Edit/${id}`;

            document.getElementById('characterId').value = char.id;
            document.getElementById('name').value = char.name;
            document.getElementById('element').value = char.element;
            document.getElementById('path').value = char.path;
            document.getElementById('rarity').value = char.rarity;
            document.getElementById('currentLevel').value = char.currentLevel;
            document.getElementById('lightconeName').value = char.lightconeName || '';
            document.getElementById('lightconeLevel').value = char.lightconeLevel;
            document.getElementById('talentBasicAttack').value = char.talentBasicAttack;
            document.getElementById('talentSkill').value = char.talentSkill;
            document.getElementById('talentUltimate').value = char.talentUltimate;
            document.getElementById('talentTalent').value = char.talentTalent;
            document.getElementById('relicSet').value = char.relicSet || '';
            document.getElementById('relicPieces').value = char.relicPieces;

            document.getElementById('characterModal').classList.add('active');
            lucide.createIcons();
        }

        function deleteCharacter(id) {
            if (!confirm('Are you sure you want to delete this character?')) return;

            const form = document.getElementById('deleteForm');
            form.action = `/StarRail/Delete/${id}`;
            form.submit();
        }
    </script>
</body>
</html>