@model IEnumerable<GachaTracker.Models.WutheringCharacter>

@{
    ViewData["Title"] = "Wuthering Waves Tracker";
    Layout = null;
    var characterList = Model?.ToList() ?? new List<GachaTracker.Models.WutheringCharacter>();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lucide/0.263.1/umd/lucide.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .modal {
            display: none;
        }

            .modal.active {
                display: flex;
            }
    </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-purple-900 via-indigo-900 to-blue-900 text-white">

    <div class="max-w-7xl mx-auto p-8">
        <div class="flex items-center justify-between mb-8">
            <a href="/" class="flex items-center gap-2 text-purple-200 hover:text-purple-100 transition-all">
                <i data-lucide="home" class="w-5 h-5"></i>
                <span>All Games</span>
            </a>
            <div class="flex gap-2">
                <a href="/Genshin/Index" class="px-4 py-2 bg-white/10 hover:bg-white/20 border-2 border-white/20 rounded-lg transition-all">Genshin</a>
                <a href="/StarRail/Index" class="px-4 py-2 bg-white/10 hover:bg-white/20 border-2 border-white/20 rounded-lg transition-all">Star Rail</a>
                <a href="/ZZZ/Index" class="px-4 py-2 bg-white/10 hover:bg-white/20 border-2 border-white/20 rounded-lg transition-all">ZZZ</a>
                <a href="/Wuthering/Index" class="px-4 py-2 bg-emerald-500/30 border-2 border-emerald-400 rounded-lg font-semibold">Wuthering</a>
            </div>
        </div>

        <div class="text-center mb-12">
            <h1 class="text-6xl font-bold mb-4 bg-gradient-to-r from-emerald-300 via-teal-300 to-cyan-300 bg-clip-text text-transparent">
                Wuthering Waves Resonators
            </h1>
            <p class="text-xl text-purple-200">Track your Resonators of Solaris-3</p>
        </div>

        <div class="flex justify-between items-center mb-8 gap-4 flex-wrap">
            <div class="flex gap-2 flex-wrap">
                <button onclick="filterElement('all')" class="filter-btn px-4 py-2 rounded-lg transition-all bg-purple-600 shadow-lg" data-elem="all">All</button>
                <button onclick="filterElement('Aero')" class="filter-btn px-4 py-2 rounded-lg bg-teal-500/20 hover:bg-teal-500/40 border border-teal-400/50" data-elem="Aero">Aero</button>
                <button onclick="filterElement('Havoc')" class="filter-btn px-4 py-2 rounded-lg bg-purple-500/20 hover:bg-purple-500/40 border border-purple-400/50" data-elem="Havoc">Havoc</button>
                <button onclick="filterElement('Fusion')" class="filter-btn px-4 py-2 rounded-lg bg-orange-500/20 hover:bg-orange-500/40 border border-orange-400/50" data-elem="Fusion">Fusion</button>
                <button onclick="filterElement('Glacio')" class="filter-btn px-4 py-2 rounded-lg bg-cyan-500/20 hover:bg-cyan-500/40 border border-cyan-400/50" data-elem="Glacio">Glacio</button>
                <button onclick="filterElement('Electro')" class="filter-btn px-4 py-2 rounded-lg bg-violet-500/20 hover:bg-violet-500/40 border border-violet-400/50" data-elem="Electro">Electro</button>
                <button onclick="filterElement('Spectro')" class="filter-btn px-4 py-2 rounded-lg bg-yellow-500/20 hover:bg-yellow-500/40 border border-yellow-400/50" data-elem="Spectro">Spectro</button>
            </div>
            <button onclick="openModal()" class="flex items-center gap-2 bg-gradient-to-r from-emerald-500 to-teal-600 px-6 py-3 rounded-lg hover:shadow-xl hover:shadow-emerald-500/50 transition-all transform hover:scale-105">
                <i data-lucide="plus" class="w-5 h-5"></i>
                Add Resonator
            </button>
        </div>

        <div id="characterGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"></div>
        <div id="emptyState" class="text-center py-20 hidden">
            <p class="text-2xl text-purple-300">No resonators yet. Add your first Resonator!</p>
        </div>
    </div>

    <div id="characterModal" class="modal fixed inset-0 bg-black/70 backdrop-blur-sm items-center justify-center z-50 p-4">
        <div class="bg-gradient-to-br from-indigo-900 to-purple-900 rounded-2xl p-8 max-w-2xl w-full max-h-[90vh] overflow-y-auto border-2 border-emerald-400/30 shadow-2xl">
            <div class="flex justify-between items-center mb-6">
                <h2 id="modalTitle" class="text-3xl font-bold">Add New Resonator</h2>
                <button onclick="closeModal()" class="p-2 hover:bg-white/10 rounded-lg transition-all">
                    <i data-lucide="x" class="w-6 h-6"></i>
                </button>
            </div>

            <form id="characterForm" method="post" class="space-y-4">
                @Html.AntiForgeryToken()
                <input type="hidden" id="characterId" name="Id" value="0">

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm text-purple-200 mb-2">Resonator Name</label>
                        <input type="text" id="name" name="Name" required class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-emerald-400 transition-all text-white">
                    </div>
                    <div>
                        <label class="block text-sm text-purple-200 mb-2">Element</label>
                        <select id="element" name="Element" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-emerald-400 transition-all text-white">
                            <option>Aero</option>
                            <option>Havoc</option>
                            <option>Fusion</option>
                            <option>Glacio</option>
                            <option>Electro</option>
                            <option>Spectro</option>
                        </select>
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm text-purple-200 mb-2">Rarity</label>
                        <select id="rarity" name="Rarity" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-emerald-400 transition-all text-white">
                            <option value="4">4★</option>
                            <option value="5" selected>5★</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm text-purple-200 mb-2">Level (Max 90)</label>
                        <input type="number" id="currentLevel" name="CurrentLevel" value="1" min="1" max="90" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-emerald-400 transition-all text-white">
                    </div>
                </div>

                <div class="border-t border-white/20 pt-4">
                    <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
                        <i data-lucide="sword" class="w-5 h-5"></i> Weapon
                    </h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm text-purple-200 mb-2">Weapon Type</label>
                            <select id="weaponType" name="WeaponType" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-emerald-400 transition-all text-white">
                                <option>Gauntlets</option>
                                <option>Broadblades</option>
                                <option>Swords</option>
                                <option>Pistols</option>
                                <option>Rectifiers</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm text-purple-200 mb-2">Weapon Level (Max 90)</label>
                            <input type="number" id="weaponLevel" name="WeaponLevel" value="1" min="1" max="90" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-emerald-400 transition-all text-white">
                        </div>
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-purple-200 mb-2">Weapon Name</label>
                        <input type="text" id="weaponName" name="WeaponName" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-emerald-400 transition-all text-white">
                    </div>
                </div>

                <div class="border-t border-white/20 pt-4">
                    <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
                        <i data-lucide="zap" class="w-5 h-5"></i> Skills (Max 10)
                    </h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm text-purple-200 mb-2">Normal Attack</label>
                            <input type="number" id="skillNormalAttack" name="SkillNormalAttack" value="1" min="1" max="10" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-emerald-400 transition-all text-white">
                        </div>
                        <div>
                            <label class="block text-sm text-purple-200 mb-2">Resonance Skill</label>
                            <input type="number" id="skillResonanceSkill" name="SkillResonanceSkill" value="1" min="1" max="10" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-emerald-400 transition-all text-white">
                        </div>
                        <div>
                            <label class="block text-sm text-purple-200 mb-2">Forte Circuit</label>
                            <input type="number" id="skillForteCircuit" name="SkillForteCircuit" value="1" min="1" max="10" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-emerald-400 transition-all text-white">
                        </div>
                        <div>
                            <label class="block text-sm text-purple-200 mb-2">Resonance Liberation</label>
                            <input type="number" id="skillResonanceLiberation" name="SkillResonanceLiberation" value="1" min="1" max="10" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-emerald-400 transition-all text-white">
                        </div>
                        <div>
                            <label class="block text-sm text-purple-200 mb-2">Intro Skill</label>
                            <input type="number" id="skillIntroSkill" name="SkillIntroSkill" value="1" min="1" max="10" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-emerald-400 transition-all text-white">
                        </div>
                    </div>
                </div>

                <div class="border-t border-white/20 pt-4">
                    <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
                        <i data-lucide="star" class="w-5 h-5"></i> Additional Upgrades
                    </h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm text-purple-200 mb-2">Stat Nodes Completed (0-10)</label>
                            <input type="number" id="statNodesCompleted" name="StatNodesCompleted" value="0" min="0" max="10" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-emerald-400 transition-all text-white">
                        </div>
                        <div>
                            <label class="block text-sm text-purple-200 mb-2">Inherent Skills (1-10)</label>
                            <input type="number" id="inherentSkillsCompleted" name="InherentSkillsCompleted" value="1" min="1" max="10" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-emerald-400 transition-all text-white">
                        </div>
                    </div>
                </div>

                <div class="border-t border-white/20 pt-4">
                    <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
                        <i data-lucide="shield" class="w-5 h-5"></i> Echoes
                    </h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm text-purple-200 mb-2">Echo Set</label>
                            <input type="text" id="echoSet" name="EchoSet" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-emerald-400 transition-all text-white">
                        </div>
                        <div>
                            <label class="block text-sm text-purple-200 mb-2">Pieces (0-5)</label>
                            <input type="number" id="echoPieces" name="EchoPieces" value="0" min="0" max="5" class="w-full bg-black/30 border border-white/20 rounded-lg px-4 py-2 focus:outline-none focus:border-emerald-400 transition-all text-white">
                        </div>
                    </div>
                </div>

                <div class="flex gap-4 pt-6">
                    <button type="submit" class="flex-1 bg-gradient-to-r from-green-500 to-emerald-600 py-3 rounded-lg hover:shadow-xl hover:shadow-green-500/50 transition-all transform hover:scale-105 flex items-center justify-center gap-2 font-semibold">
                        <i data-lucide="save" class="w-5 h-5"></i>
                        <span id="saveButtonText">Save Resonator</span>
                    </button>
                    <button type="button" onclick="closeModal()" class="flex-1 bg-white/10 py-3 rounded-lg hover:bg-white/20 transition-all">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <form id="deleteForm" method="post" style="display: none;">
        @Html.AntiForgeryToken()
    </form>

    <script>
        let characters = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(characterList, new System.Text.Json.JsonSerializerOptions { PropertyNamingPolicy = System.Text.Json.JsonNamingPolicy.CamelCase }));
        let currentFilter = 'all';
        let editingId = 0;

        document.addEventListener('DOMContentLoaded', function() {
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
            renderCharacters();
        });

        function renderCharacters() {
            const grid = document.getElementById('characterGrid');
            const emptyState = document.getElementById('emptyState');
            const filtered = currentFilter === 'all' ? characters : characters.filter(c => c.element === currentFilter);

            console.log('Rendering characters:', filtered);

            if (filtered.length === 0) {
                grid.innerHTML = '';
                emptyState.classList.remove('hidden');
                return;
            }

            emptyState.classList.add('hidden');
            grid.innerHTML = filtered.map(char => `
                <div class="bg-gradient-to-br from-white/10 to-white/5 backdrop-blur-lg rounded-xl p-6 border border-white/20 hover:border-emerald-400/50 transition-all hover:shadow-2xl hover:shadow-emerald-500/30 transform hover:-translate-y-1">
                    <div class="flex justify-between items-start mb-4">
                        <div>
                            <h3 class="text-2xl font-bold mb-1">${char.name}</h3>
                            <div class="flex items-center gap-2 text-sm text-purple-200">
                                <span>${char.element}</span><span>•</span><span>${char.weaponType || ''}</span>
                            </div>
                        </div>
                        <div class="flex gap-2">
                            <button onclick="editCharacter(${char.id})" class="p-2 bg-blue-500/20 hover:bg-blue-500/40 rounded-lg transition-all">
                                <i data-lucide="edit-2" class="w-4 h-4"></i>
                            </button>
                            <button onclick="deleteCharacter(${char.id})" class="p-2 bg-red-500/20 hover:bg-red-500/40 rounded-lg transition-all">
                                <i data-lucide="trash-2" class="w-4 h-4"></i>
                            </button>
                        </div>
                    </div>
                    <div class="flex gap-1 mb-4">
                        ${Array(char.rarity).fill('<i data-lucide="star" class="w-4 h-4 fill-yellow-400 text-yellow-400"></i>').join('')}
                    </div>
                    <div class="mb-3">
                        <div class="flex justify-between text-sm mb-1">
                            <span class="text-purple-200">Level</span>
                            <span class="font-semibold">${char.currentLevel}/90</span>
                        </div>
                        <div class="h-2 bg-black/30 rounded-full overflow-hidden">
                            <div class="${getProgressColor(char.currentLevel, 90)} h-full" style="width: ${(char.currentLevel / 90) * 100}%"></div>
                        </div>
                    </div>
                    ${char.weaponName ? `
                    <div class="mb-3">
                        <div class="flex items-center gap-2 text-sm mb-1">
                            <i data-lucide="sword" class="w-3.5 h-3.5"></i>
                            <span class="text-purple-200">${char.weaponName}</span>
                        </div>
                        <div class="flex justify-between text-xs mb-1">
                            <span class="text-purple-300">Lv ${char.weaponLevel}/90</span>
                        </div>
                        <div class="h-2 bg-black/30 rounded-full overflow-hidden">
                            <div class="${getProgressColor(char.weaponLevel, 90)} h-full" style="width: ${(char.weaponLevel / 90) * 100}%"></div>
                        </div>
                    </div>` : ''}
                    <div class="grid grid-cols-3 gap-2 mb-3">
                        <div class="bg-black/20 rounded p-2 text-center">
                            <div class="text-xs text-purple-200">Normal</div>
                            <div class="font-bold">${char.skillNormalAttack}/10</div>
                        </div>
                        <div class="bg-black/20 rounded p-2 text-center">
                            <div class="text-xs text-purple-200">Skill</div>
                            <div class="font-bold">${char.skillResonanceSkill}/10</div>
                        </div>
                        <div class="bg-black/20 rounded p-2 text-center">
                            <div class="text-xs text-purple-200">Forte</div>
                            <div class="font-bold">${char.skillForteCircuit}/10</div>
                        </div>
                        <div class="bg-black/20 rounded p-2 text-center">
                            <div class="text-xs text-purple-200">Liberation</div>
                            <div class="font-bold">${char.skillResonanceLiberation}/10</div>
                        </div>
                        <div class="bg-black/20 rounded p-2 text-center">
                            <div class="text-xs text-purple-200">Intro</div>
                            <div class="font-bold">${char.skillIntroSkill}/10</div>
                        </div>
                    </div>
                    <div class="grid grid-cols-2 gap-2 mb-3">
                        <div class="bg-black/20 rounded p-2 text-center">
                            <div class="text-xs text-purple-200">Stat Nodes</div>
                            <div class="font-bold">${char.statNodesCompleted}/10</div>
                        </div>
                        <div class="bg-black/20 rounded p-2 text-center">
                            <div class="text-xs text-purple-200">Inherent</div>
                            <div class="font-bold">${char.inherentSkillsCompleted}/10</div>
                        </div>
                    </div>
                    ${char.echoSet ? `
                    <div class="flex items-center justify-between text-sm bg-black/20 rounded p-2">
                        <div class="flex items-center gap-2">
                            <i data-lucide="shield" class="w-3.5 h-3.5 text-green-400"></i>
                            <span class="text-purple-200">${char.echoSet}</span>
                        </div>
                        <span class="font-bold">${char.echoPieces}/5</span>
                    </div>` : ''}
                </div>
            `).join('');

            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        }

        function getProgressColor(current, max) {
            const percent = (current / max) * 100;
            if (percent === 100) return 'bg-gradient-to-r from-green-500 to-emerald-500';
            if (percent >= 75) return 'bg-gradient-to-r from-blue-500 to-cyan-500';
            if (percent >= 50) return 'bg-gradient-to-r from-yellow-500 to-orange-500';
            return 'bg-gradient-to-r from-red-500 to-pink-500';
        }

        function filterElement(elem) {
            currentFilter = elem;
            document.querySelectorAll('.filter-btn').forEach(btn => {
                if (btn.dataset.elem === elem) {
                    btn.classList.add('bg-purple-600', 'shadow-lg');
                } else {
                    btn.classList.remove('bg-purple-600', 'shadow-lg');
                }
            });
            renderCharacters();
        }

        function openModal() {
            editingId = 0;
            document.getElementById('modalTitle').textContent = 'Add New Resonator';
            document.getElementById('saveButtonText').textContent = 'Save Resonator';
            document.getElementById('characterForm').reset();
            document.getElementById('characterForm').action = '/Wuthering/Create';
            document.getElementById('characterModal').classList.add('active');

            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        }

        function closeModal() {
            document.getElementById('characterModal').classList.remove('active');
        }

        function editCharacter(id) {
            const char = characters.find(c => c.id === id);
            if (!char) return;

            editingId = id;
            document.getElementById('modalTitle').textContent = 'Edit Resonator';
            document.getElementById('saveButtonText').textContent = 'Update Resonator';
            document.getElementById('characterForm').action = `/Wuthering/Edit/${id}`;

            document.getElementById('characterId').value = char.id;
            document.getElementById('name').value = char.name;
            document.getElementById('element').value = char.element;
            document.getElementById('rarity').value = char.rarity;
            document.getElementById('currentLevel').value = char.currentLevel;
            document.getElementById('weaponType').value = char.weaponType || 'Swords';
            document.getElementById('weaponName').value = char.weaponName || '';
            document.getElementById('weaponLevel').value = char.weaponLevel;
            document.getElementById('skillNormalAttack').value = char.skillNormalAttack;
            document.getElementById('skillResonanceSkill').value = char.skillResonanceSkill;
            document.getElementById('skillForteCircuit').value = char.skillForteCircuit;
            document.getElementById('skillResonanceLiberation').value = char.skillResonanceLiberation;
            document.getElementById('skillIntroSkill').value = char.skillIntroSkill;
            document.getElementById('statNodesCompleted').value = char.statNodesCompleted;
            document.getElementById('inherentSkillsCompleted').value = char.inherentSkillsCompleted;
            document.getElementById('echoSet').value = char.echoSet || '';
            document.getElementById('echoPieces').value = char.echoPieces;

            document.getElementById('characterModal').classList.add('active');
            lucide.createIcons();
        }

        function deleteCharacter(id) {
            if (!confirm('Are you sure you want to delete this resonator?')) return;

            const form = document.getElementById('deleteForm');
            form.action = `/Wuthering/Delete/${id}`;
            form.submit();
        }
    </script>
</body>
</html>